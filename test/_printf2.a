/**
 * len - get length.
 * @s: string
 * 
 * Return: returns the string length.
*/
int xlen(char *s)
{
	unsigned int cnt = 0;
	while (s && s[cnt])
		cnt++;
	return cnt;
}
/**
 * _printf - prints all arguments.
 * @format: format
 *
 * Return: Print
*/
int _printf(const char *format, ...)
{
	va_list ap;
	int i = 0, j = 0;
	char *id;
	int cnt = 0, cnt_ind = 0;
	int sum = 0, len;

	while (format && format[cnt])
	{
		cnt++;
		if (format[cnt] == '%')
			cnt_ind++;
	}
	sum += (cnt - (2 * cnt_ind));

	// for variable arguments
	va_start(ap, format);
	
	// str = malloc(sizeof(char) * len);
	id = malloc(sizeof(char) * cnt_ind);
	while (format && format[i])
	{
		if (format[i] == '%')
		{
			i++;
			id[j] = format[i];
			printf("%c\n", format[i]);
			if (format[i] == 'c' || format[i] == 'd' || format[i] == 'f')
			{
				va_arg(ap, char);
				sum++;
			}
			else if (format[i] == 's')
			{
				sum += xlen(va_arg(ap, char *));
			}
			j++;
			i++;
			continue;
		}
		// str[k++] = format[i++];
		i++;
	}
	// printf("%s\n",str);
	// printf("%s\n", id);
	printf("%d\n", sum);

	return (0);
}

